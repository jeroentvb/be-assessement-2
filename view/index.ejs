<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" type="text/css" href="css/main.css">
  <title>Home - WatchTogether</title>
</head>
<body>
    <nav>
      <ul>
        <li><a href="chatlist"><img src="images/chatlist.png" alt="Chatlist icon"></a></li>
        <li><h2>Home</h2></li>
        <li><button id="menuBtn"><img src="images/menu.png" alt="Menu"></button></li>
      </ul>
      <div id="hamburgerMenu">
        <ul>
          <li><h3>Menu</h3> <button id="closeMenu"><img src="images/close-white.png" alt="Close menu"></button></li>
          <li><a href="index">Home</a></li>
          <li><a href="chatlist">Chats</a></li>
          <li><a href="profile">Profile</a></li>
          <li><a href="settings">Settings</a></li>
        </ul>
      </div>
    </nav>


<main id="col-3">
  <% for(i=0; i < users.length; i++) { %>
  <article class="personCard">
    <div class="nameAndAvatar">
      <h2><%= users[i].name %></h2>
      <div>
      <% if (users[i].avatar == null) { %>
      <img src="images/placeholder.jpg" alt="profile image">
      <% } else { %>
      <img src="upload/<%= users[i].avatar %>" alt="profile image">
      <% } %>
      </div>
    </div>
    <% if (users[i].tagline != 'No tagline set') { %>
    <h4><%= users[i].tagline %></h3>
    <% } %>
    <h2>Currently watching:</h2>
    <div class="movieGrid">
      <img src="images/<%= users[i].series1 %>.jpg" alt="Currently watching image 1">
      <img src="images/<%= users[i].series2 %>.jpg" alt="Currently watching image 2">
    </div>
    <div class="likeDislikeButtons">
      <button>
        <img src="images/close.png" alt="Dislike" class="dislike">
      </button>
      <button>
        <img src="images/like.png" alt="Like" class="like">
      </button>
    </div>
  </article>
  <% } %>
</main>

<% include tail %>
